<span class="rating_color">
    {% if rating %}
        {% for value in 1..5 %}
            {% if value <= rating %}
                <i class="fas fa-star"></i>
            {% else %}
                <i class="far fa-star"></i>
            {% endif %}
        {% endfor %}
        {% else %}
        <span class="text-dark">Pas encore not√©</span>
    {% endif %}
</span>