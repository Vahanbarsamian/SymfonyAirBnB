{% extends 'base.html.twig' %}

{% block title %}/{{titre}}{% endblock %}
{% block body %}
{% if error %}
    <div class="alert alert-danger p-4">Le mot de passe saisi et/ou l'identifiant sont erron&eacute;s</div>
{% endif %}
<h1 class="text-center mb-5 pb-5 border-bottom border-grey mx-auto">{{titre}}</h1>
<div class="container">
    <form method="post" action="{{path('account_login')}}" accept-charset="UTF-8" class="form-group">
        
        <input type="hidden" class="form-control" name="action" value="users/login">

        <div class="mb-3 form-group">
            <h3><label for="loginName">Email</label></h3>
            <input id="loginName"
                type="text"
                class="form-control"
                name="_username"
                placeholder="Veuillez saisir votre email"
                value="{% if lastUser is defined %}{{lastUser}}{% endif %}"
                required>
        </div>
        <div class="mb-3 form-group">
            <h3><label for="password">Mot de passe</label></h3>
            <input id="password"
                type="password"
                class="form-control"
                name="_password"
                placeholder="Veuillez saisir votre mot de passe"
                required>
        </div>  
        <div class="d-flex col-12 p-0 form-group"> 
            <div class="row align-items-center col-12 p-0 m-0">    
                <div class="p-2 col-sm-12 col-lg-3 d-flex align-items-center">
                    <input type="checkbox"
                        class="form-control d-inline col-2 ml-2"
                        name="rememberMe"
                        id="check-login"
                        value="1">
                    <label class="mb-1 d-inline col-12 p-0" for="check-login">Remember me</label>
                </div>    
                <div class="d-flex col-sm-12 col-lg-9 justify-content-end p-0 m-0">
                    <input type="submit"
                    class="d-inline btn btn-primary"
                    value="Connexion !">
                </div>
            </div> 
        </div>
    {# <p class="col-sm-12 pl-2 pr-0 mx-auto"><a href="#">Forgot your password?</a></p> #}
    </form>
</div>
<div class="space"></div>
{% endblock %}
{% block javascripts %}
    <script src="/js/rememberMe.js"></script>
{% endblock %}
